<div class="container">
  <h1 class="mb-3">Flats</h1>
  <div class="row gap-3">
    <% @flats.each do |flat| %>
      <div class="card col-lg-3 bg-light rounded shadow p-0" style="width: 18rem;">
        <%= image_tag flat["imageUrl"], class: "card-img-top"%>
        <div class="card-body d-flex flex-column justify-content-between">
          <div class="d-flex flex-column justify-content-between flex-grow-1 pb-2">
            <h5 class="card-title"><%= flat["name"] %> </h5>
            <p class="card-text">$<%= flat["price"] %></p>
          </div>
          <%= link_to "See details", flat_path(flat["id"]), class: "btn btn-primary"%>
        </div>
      </div>
    <% end %>
  </div>
</div>

